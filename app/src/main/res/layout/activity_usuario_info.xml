<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Usuario_info">

    <View
        android:id="@+id/ft"
        android:background="@drawable/user_c"
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:layout_marginTop="30dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/ic_user"
        app:layout_constraintBottom_toBottomOf="@+id/ft"
        app:layout_constraintEnd_toEndOf="@id/ft"
        app:layout_constraintStart_toStartOf="@id/ft"
        app:layout_constraintTop_toTopOf="@id/ft" />

    <ImageView
        android:id="@+id/use_nome"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_user"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/ft"
        app:layout_constraintStart_toStartOf="parent"
        />

    <ImageView
        android:id="@+id/use_email"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/ic_email"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/use_nome"
        app:layout_constraintStart_toStartOf="parent"
        />

    <TextView
        android:id="@+id/t1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo"
        android:textStyle="italic"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintTop_toBottomOf="@id/ft"
        app:layout_constraintStart_toEndOf="@id/use_nome"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="20dp"
        />

    <TextView
        android:id="@+id/t2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Exemplo@gmail.com"
        android:textColor="@color/black"
        android:textStyle="italic"
        android:textSize="20sp"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="20dp"
        app:layout_constraintTop_toBottomOf="@id/use_nome"
        app:layout_constraintStart_toEndOf="@id/use_email"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/use_bt"
        style="@style/Button_login"
        android:text="Deslogar"
        android:textSize="20dp"
        android:textStyle="italic"
        android:layout_marginTop="30dp"
        app:layout_constraintTop_toBottomOf="@id/use_email"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        />
</androidx.constraintlayout.widget.ConstraintLayout>